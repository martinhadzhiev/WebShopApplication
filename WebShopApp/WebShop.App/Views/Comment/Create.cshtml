@model WebShop.Models.Comment

@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="well">
        <h2>Leave a Comment</h2>
        @using (Html.BeginForm("Create", "Comment", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Content, new { @class = "form-control" })
                </div>
            </div>
            <input type="submit" class="btn btn-success" />
        }
    </div>
</div>
